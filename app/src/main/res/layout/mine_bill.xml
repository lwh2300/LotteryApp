<?xml version="1.0" encoding="utf-8"?>
<!-- 我的 - 账单 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/page_wrp">
    <!-- 顶部标题栏 -->
    <LinearLayout style="@style/head_wrp">
        <ImageView
            android:id="@+id/bill_back"
            style="@style/back_icon"/>

        <TextView
            style="@style/head_tit"
            android:text="账单"/>

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/bill_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:text="2019年7月"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                android:text="支出"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DA251D"
                android:textSize="12sp"
                android:text="  &#165;"/>
            <TextView
                android:id="@+id/bill_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3795.50"
                android:textColor="#DA251D"
                android:textSize="12sp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                android:text="收入"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#21824c"
                android:textSize="12sp"
                android:text=" &#165;"/>
            <TextView
                android:id="@+id/bill_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#21824c"
                android:textSize="12sp"
                android:text="1222.50"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/bill_list"
        style="@style/lv_style"></ListView>
</LinearLayout>