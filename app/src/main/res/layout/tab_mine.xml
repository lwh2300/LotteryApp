<?xml version="1.0" encoding="utf-8"?>
<!-- tab - 我的 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/page_wrp">
    <ScrollView style="@style/view_wrp">
        <LinearLayout style="@style/mwv_wrp">
            <!-- 个人信息 -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mine_msg_wrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout style="@style/msg_wrp">
                    <ImageView style="@style/msg_img"/>

                    <LinearLayout style="@style/msg_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/name_style"
                                android:layout_weight="1"
                                android:text="天涯石头"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="5dp"
                                    android:text="关注"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:text="2334"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginRight="5dp"
                                    android:text="粉丝"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:text="2334"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 充值 -->
                <LinearLayout style="@style/balance">
                    <LinearLayout style="@style/recharge_wrp">
                        <TextView
                            style="@style/recharge_text"
                            android:text="余额（元）"/>
                        <TextView
                            style="@style/recharge_num"
                            android:text="3000"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mine_recharge"
                        style="@style/recharge"
                        android:text="充值"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 微信登录 -->
            <LinearLayout
                android:id="@+id/login_wrp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/wechar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DA251D"
                        android:textSize="16dp"
                        android:text="微信登录"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 功能列表 -->
            <LinearLayout style="@style/mwv_wrp">

                <LinearLayout
                    android:id="@+id/mine_bill"
                    style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_bill"/>
                    <TextView
                        style="@style/ListName"
                        android:text="账单"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_rune"
                    style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_rune"/>
                    <TextView
                        style="@style/ListName"
                        android:text="我的江湖"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_friends"
                    style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_friend"/>
                    <TextView
                        style="@style/ListName"
                        android:text="我的好友"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rules_library"
                    style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_ruleslibrary"/>
                    <LinearLayout style="@style/ListName">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="规库  "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:text="0"/>
                    </LinearLayout>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedback"
                    style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_feedback"/>
                    <TextView
                        style="@style/ListName"
                        android:text="有奖反馈"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_helpcenter"/>
                    <TextView
                        style="@style/ListName"
                        android:text="帮助中心"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_versionupdate"/>
                    <TextView
                        style="@style/ListName"
                        android:text="版本更新"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>

                <LinearLayout style="@style/mineList">
                    <ImageView
                        style="@style/mineListIcon"
                        android:src="@mipmap/mine_setting"/>
                    <TextView
                        style="@style/ListName"
                        android:text="系统设置"/>

                    <ImageView style="@style/rightIcon"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>