<?xml version="1.0" encoding="utf-8"?>
<!-- tab - 关注 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/page_wrp">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f6f6f6"/>
    <ScrollView style="@style/view_wrp">
        <LinearLayout style="@style/mwv_wrp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/mine_style">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:text="2324期 * 七星彩"/>
                        <TextView
                            style="@style/msg1_num"
                            android:text="4070393"/>
                        <TextView
                            style="@style/time_style"
                            android:gravity="center"
                            android:text="2019年7月18"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:text="2324期 * 排列五"/>
                        <TextView
                            style="@style/msg1_num"
                            android:text="7615"/>
                        <TextView
                            style="@style/time_style"
                            android:gravity="center"
                            android:text="2019年7月18"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/login_wrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="100dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#aaaaaa"
                    android:text="登录后才能查看关注人的信息,请先登录"/>

                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/wechar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DA251D"
                        android:text="微信登录"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/context_wrp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="七星彩"/>

                <ListView
                    android:id="@+id/attention_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#FFFFFFFF">

                </ListView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="排列五"/>

                <ListView
                    android:id="@+id/attention_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#FFFFFFFF">
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>