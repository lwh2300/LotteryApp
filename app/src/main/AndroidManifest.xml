<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lotteryapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".draw.DrawActivity"></activity>
        <activity android:name=".mine.RulesLibraryActivity"></activity>
        <activity android:name=".mine.RechargeActivity"></activity>
        <activity android:name=".mine.BillActivity"></activity>
        <activity android:name=".mine.FeedBackActivity"></activity>
        <activity android:name=".draw.DrawHistoryAcivity"></activity>
        <activity android:name=".runescape.IssueActivity"></activity>
        <activity android:name=".runescape.PersionCenterActivity"></activity>
        <activity android:name=".runescape.RuneMsgDetailActivity"></activity>
        <activity android:name=".mine.FriendsActivity"></activity>
        <activity android:name=".runescape.RuneDetailActivity"></activity>
        <activity android:name=".mine.MineRuneActivity"></activity>
        <activity android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.NoActionBar.Transparent"
            ></activity>

    </application>

</manifest>